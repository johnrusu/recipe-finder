{
  "name": "recipe-finder",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.tsx,.vue --fix",
    "format": "prettier --write .",
    "type-check": "vue-tsc --noEmit -p tsconfig.json",
    "prepare": "husky",
    "test:e2e": "playwright test",
    "test": "vitest run --passWithNoTests && playwright test",
    "deploy:firebase": "cd functions && rm -rf node_modules package-lock.json && npm install && cd .. && bash sync-server.sh && npx firebase-tools deploy --only functions"
  },
  "dependencies": {
    "@auth0/auth0-vue": "^2.5.0",
    "@fontsource/roboto": "^5.2.9",
    "@mdi/font": "^7.4.47",
    "@tailwindcss/vite": "^4.1.18",
    "@types/ramda": "^0.31.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "pinia": "^3.0.4",
    "ramda": "^0.32.0",
    "vite-plugin-html": "^3.2.2",
    "vue": "^3.5.24",
    "vue-router": "^4.6.4",
    "vuetify": "^3.11.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/eslint-plugin": "^1.3.4",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.8.1",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-plugin-vue": "^10.6.2",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.4"
  }
}
